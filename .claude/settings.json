{
  "extraKnownMarketplaces": {
    "outfitter": {
      "source": {
        "source": "github",
        "repo": "outfitter-dev/agents"
      }
    },
    "superpowers-marketplace": {
      "source": {
        "source": "github",
        "repo": "obra/superpowers"
      }
    }
  },
  "enabledPlugins": {
    "baselayer@outfitter": true,
    "episodic-memory@superpowers-marketplace": true
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bun \"$CLAUDE_PROJECT_DIR/.claude/hooks/format-markdown.ts\""
          }
        ]
      }
    ]
  }
}
