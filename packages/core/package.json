{
  "name": "@skillset/core",
  "version": "0.0.1",
  "description": "Core library for skillset - tokenizer, resolver, indexer, cache, config, format",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "clean": "rm -rf dist",
    "types": "bunx tsc -p tsconfig.json --emitDeclarationOnly",
    "build": "bun run clean && bun build ./src/index.ts --outdir dist --target bun && bun run types",
    "test": "bun test"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@skillset/shared": "workspace:*",
    "@skillset/types": "workspace:*",
    "json-stable-stringify": "^1.1.1",
    "object-treeify": "^5.0.1",
    "proper-lockfile": "^4.1.2",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/json-stable-stringify": "^1.0.36",
    "@types/proper-lockfile": "^4.1.4",
    "bun-types": "^1.3.2",
    "typescript": "^5.6.3"
  },
  "author": "Matt Galligan",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/outfitter-dev/skillset.git",
    "directory": "packages/core"
  }
}
