{
  "name": "@skillset/shared",
  "version": "0.0.1",
  "description": "Shared utilities for skillset (logger, paths, env)",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "clean": "rm -rf dist",
    "types": "bunx tsc -p tsconfig.json --emitDeclarationOnly",
    "build": "bun run clean && bun build ./src/index.ts --outdir dist --target bun && bun run types"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@skillset/types": "workspace:*",
    "pino": "^9.5.0",
    "pino-pretty": "^11.3.0"
  },
  "devDependencies": {
    "bun-types": "^1.3.2",
    "typescript": "^5.6.3"
  },
  "author": "Matt Galligan",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/outfitter-dev/skillset.git",
    "directory": "packages/shared"
  }
}
