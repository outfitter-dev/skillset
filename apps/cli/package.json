{
  "name": "skillset",
  "version": "0.0.1",
  "description": "Deterministic skill invocation for AI coding agents via $skill syntax - CLI",
  "type": "module",
  "bin": {
    "skillset": "./dist/index.js"
  },
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.js"
    },
    "./hook": {
      "types": "./dist/types/hook.d.ts",
      "import": "./dist/hook.js"
    }
  },
  "scripts": {
    "dev": "bun run src/index.ts --",
    "clean": "rm -rf dist",
    "types": "bunx tsc -p tsconfig.json --emitDeclarationOnly",
    "build": "bun run clean && bun build ./src/index.ts ./src/hook.ts --outdir dist --target bun --minify && bun run types",
    "prepublishOnly": "bun run build"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@skillset/core": "workspace:*",
    "@skillset/shared": "workspace:*",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "inquirer": "^9.2.12",
    "object-treeify": "^5.0.1",
    "ora": "^8.0.1"
  },
  "devDependencies": {
    "@types/inquirer": "9",
    "bun-types": "^1.3.2",
    "typescript": "^5.6.3"
  },
  "author": "Matt Galligan",
  "license": "MIT",
  "engines": {
    "bun": ">=1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/outfitter-dev/skillset.git",
    "directory": "apps/cli"
  },
  "bugs": {
    "url": "https://github.com/outfitter-dev/skillset/issues"
  },
  "homepage": "https://github.com/outfitter-dev/skillset#readme",
  "keywords": [
    "claude",
    "ai",
    "agents",
    "skills",
    "codex",
    "cli"
  ]
}
