{
  "name": "skillset",
  "version": "0.0.1",
  "description": "Deterministic skill invocation for AI coding agents via $skill syntax.",
  "type": "module",
  "bin": {
    "skillset": "./dist/index.js"
  },
  "types": "./dist/types/index.d.ts",
  "scripts": {
    "dev": "bun run src/index.ts --",
    "clean": "rm -rf dist",
    "types": "bunx tsc -p tsconfig.build.json --emitDeclarationOnly",
    "build": "bun run clean && bun build ./src/index.ts ./src/hook.ts --outdir dist --target bun --minify && bun run types",
    "check": "ultracite check",
    "fix": "ultracite fix",
    "format": "bun run fix",
    "lint": "bun run check",
    "lint:md": "markdownlint-cli2",
    "format:md": "markdownlint-cli2 --fix",
    "lint:actions": "actionlint",
    "prepublishOnly": "bun run check && bun test && bun run build",
    "test": "bun test"
  },
  "files": [
    "dist"
  ],
  "author": "Matt Galligan",
  "license": "MIT",
  "engines": {
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "inquirer": "^9.2.12",
    "object-treeify": "^5.0.1",
    "ora": "^8.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/inquirer": "9",
    "bun-types": "^1.3.2",
    "markdownlint-cli2": "^0.20.0",
    "typescript": "^5.6.3",
    "ultracite": "^6.4.2"
  },
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.js"
    },
    "./hook": {
      "types": "./dist/types/hook.d.ts",
      "import": "./dist/hook.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/outfitter-dev/skillset.git"
  },
  "bugs": {
    "url": "https://github.com/outfitter-dev/skillset/issues"
  },
  "homepage": "https://github.com/outfitter-dev/skillset#readme",
  "keywords": [
    "claude",
    "ai",
    "agents",
    "skills",
    "codex",
    "cli"
  ]
}
