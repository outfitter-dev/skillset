{
  "name": "skillset-monorepo",
  "version": "0.0.1",
  "private": true,
  "description": "Monorepo for skillset - Deterministic skill invocation for AI coding agents",
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "bun run build:types && bun run build:shared && bun run build:core && bun run build:cli",
    "build:types": "cd packages/types && bun run build",
    "build:shared": "cd packages/shared && bun run build",
    "build:core": "cd packages/core && bun run build",
    "build:cli": "cd apps/cli && bun run build",
    "test": "bun test",
    "test:core": "cd packages/core && bun test",
    "test:cli": "cd apps/cli && bun test",
    "check": "ultracite check",
    "fix": "ultracite fix",
    "format": "bun run fix",
    "lint": "bun run check",
    "lint:md": "markdownlint-cli2",
    "format:md": "markdownlint-cli2 --fix",
    "lint:actions": "actionlint",
    "clean": "rm -rf packages/*/dist apps/*/dist"
  },
  "author": "Matt Galligan",
  "license": "MIT",
  "engines": {
    "bun": ">=1.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "bun-types": "^1.3.2",
    "markdownlint-cli2": "^0.20.0",
    "typescript": "^5.6.3",
    "ultracite": "^6.4.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/outfitter-dev/skillset.git"
  },
  "bugs": {
    "url": "https://github.com/outfitter-dev/skillset/issues"
  },
  "homepage": "https://github.com/outfitter-dev/skillset#readme",
  "keywords": [
    "claude",
    "ai",
    "agents",
    "skills",
    "codex",
    "cli",
    "monorepo"
  ]
}
